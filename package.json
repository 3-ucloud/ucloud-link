{
  "name": "u-cloud-desktop",
  "version": "1.0.0",
  "description": "U-Cloud: Zero-setup desktop folder sync (Electron + Express + Chokidar)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.ucloud.desktop",
    "productName": "U-Cloud",
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/"
    ],
    "mac": {
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0"
  }
}
